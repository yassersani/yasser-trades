<body>
    <div class="container">
        <h1>Trade Journal</h1>
        <form id="tradeForm">
            <input type="date" id="date" required>
            <input type="text" id="symbol" placeholder="Symbol (e.g., AAPL)" required>
            <select id="type" required>
                <option value="">Select Type</option>
                <option value="buy">Buy</option>
                <option value="sell">Sell</option>
            </select>
            <input type="number" id="quantity" placeholder="Quantity" required>
            <input type="number" step="0.01" id="price" placeholder="Price" required>
            <textarea id="notes" placeholder="Notes" rows="2"></textarea>
            <button type="submit">Add Trade</button>
        </form>
        <table id="journalTable">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Symbol</th>
                    <th>Type</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Profit/Loss</th>
                    <th>Notes</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <script>
        const form = document.getElementById('tradeForm');
        const tableBody = document.querySelector('#journalTable tbody');
        let trades = JSON.parse(localStorage.getItem('trades')) || [];

        function renderTrades() {
            tableBody.innerHTML = '';
            trades.forEach((trade, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${trade.date}</td>
                    <td>${trade.symbol}</td>
                    <td>${trade.type}</td>
                    <td>${trade.quantity}</td>
                    <td>${trade.price}</td>
                    <td>${trade.profitLoss || 'N/A'}</td>
                    <td>${trade.notes}</td>
                    <td><button class="delete-btn" onclick="deleteTrade(${index})">Delete</button></td>
                `;
                tableBody.appendChild(row);
            });
        }

        function calculateProfitLoss() {
            // Simple calculation: assumes pairs of buy/sell for same symbol
            const grouped = {};
            trades.forEach(trade => {
                if (!grouped[trade.symbol]) grouped[trade.symbol] = [];
                grouped[trade.symbol].push(trade);
            });
            trades.forEach(trade => {
                if (trade.type === 'sell') {
                    const buys = grouped[trade.symbol].filter(t => t.type === 'buy');
                    if (buys.length) {
                        const buyPrice = buys[0].price; // Simplest: use first buy
                        trade.profitLoss = ((trade.price - buyPrice) * trade.quantity).toFixed(2);
                    }
                }
            });
        }

        form.addEventListener('submit', (e) => {
            e.preventDefault();
            const trade = {
                date: document.getElementById('date').value,
                symbol: document.getElementById('symbol').value.toUpperCase(),
                type: document.getElementById('type').value,
                quantity: parseInt(document.getElementById('quantity').value),
                price: parseFloat(document.getElementById('price').value),
                notes: document.getElementById('notes').value
            };
            trades.push(trade);
            calculateProfitLoss();
            localStorage.setItem('trades', JSON.stringify(trades));
            renderTrades();
            form.reset();
        });

        function deleteTrade(index) {
            trades.splice(index, 1);
            calculateProfitLoss();
            localStorage.setItem('trades', JSON.stringify(trades));
            renderTrades();
        }

        renderTrades();
    </script>
</body>
</html>
